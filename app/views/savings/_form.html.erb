<%= form_for @saving, :html => { :class => "form-horizontal saving" } do |f| %>

  <% if @saving.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@saving.errors.count, "error") %> prohibited this saving from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @saving.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :recdate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :recdate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:recdate) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :owner, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :owner, :class => 'form-control' %>
    </div>
    <%=f.error_span(:owner) %>
  </div>
  <div class="form-group">
    <%= f.label :note, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :note, rows: 5, :class => 'form-control' %>
    </div>
    <%=f.error_span(:note) %>
  </div>
  <div class="form-group">
      <% if @saving.video? %>
        <img " height="128" src="<%= @saving.video.url %>" width="128" />
        </br>
      <% end %>
      <%= f.label "動画・静止画を枠内にドラッグか、ボタンを押して選択してください。", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :video, :class => 'form-control' %>
      <%= f.hidden_field :video_cache %>
    </div>
    <%=f.error_span(:video) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                savings_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
