<%- model_class = Saving -%>
<div class="page-header">
  <h4>動画・静止画 </h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:recdate) %>:</strong></dt>
  <dd><%= @saving.recdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @saving.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @saving.owner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @saving.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:video) %>:</strong></dt>
  <dd><%#= video_tag @saving.video.url %>
      <%= link_to @saving.video_identifier, @saving.video.url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              savings_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_saving_path(@saving), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              saving_path(@saving),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
