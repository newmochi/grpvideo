<%= render layout: 'shared/search_box' do %>

<div class="row">
<div class="col-sm-6">
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">タイトル</label>
    <div class="col-sm-8">
      <%= f.text_field :title, class: 'form-control input-sm' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">投稿者</label>
    <div class="col-sm-8">
      <%= f.text_field :owner, class: 'form-control input-sm' %>
    </div>
  </div>


</div>

<div class="col-sm-6">

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">ファィル名</label>
    <div class="col-sm-8">
      <%= f.text_field :video, class: 'form-control input-sm' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">備考</label>
    <div class="col-sm-8">
      <%= f.text_field :note, class: 'form-control input-sm' %>
    </div>
  </div>

</div>
</div>

<div class="col-sm-12 row text-center">
  <%= link_to savings_path, class: 'btn btn-default btn-sm btn-left' do %>クリア<% end %>
  <button class="btn btn-default btn-sm btn-primary" type="submit"><i class="fa fa-search"></i> 検索</button>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_saving_path,
            :class => 'btn btn-primary' %>
</div>

</div>

<% end %>
